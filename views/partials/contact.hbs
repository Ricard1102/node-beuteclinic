<section id="contact">
  <div class="container wow fadeInUp">
    <div class="container">
      <div class="row">

        <div class="col-md-12">
          <h3 class="section-title">Contact Us</h3>
          <div class="section-title-divider">
          </div>
          <p class="section-description">Don't hesitate to contact us to request information about our services or book
            an appointment</p>


        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-4 col-lg-4">
          <div class="container">
            <div class="row" style="height:60px;">
              <div class="col-xs-3 col-md-1">
                <i class="fa fa-map-marker"></i>
              </div>
              <div class="col-xs-7 col-md-3">
                <p>{{address}}</p>
              </div>
            </div>
          </div>
          <div class="container">
            <div class="row" style="height:60px;">
              <div class="col-xs-3 col-md-1">
                <i class="fa fa-map-marker"></i>
              </div>
              <div class="col-xs-7 col-md-3">
                <p>{{address2}}</p>
              </div>
            </div>
          </div>
          <div class="container">
            <div class="row" style="height:60px;">
              <div class="col-xs-3 col-md-1">
                <i class="fa fa-map-marker"></i>
              </div>
              <div class="col-xs-7 col-md-3">
                <p>{{address3}}</p>
              </div>
            </div>
          </div>
          <div class="container">
            <div class="row" style="height:60px;">
              <div class="col-xs-3 col-md-1">
                <i class="fa fa-map-marker"></i>
              </div>
              <div class="col-xs-7 col-md-3">
                <p>{{address4}}</p>
              </div>
            </div>
          </div>
          <div class="container">
            <div class="row" style="height:60px;">
              <div class="col-xs-3 col-md-1">
                <i class="fa fa-map-marker"></i>
              </div>
              <div class="col-xs-7 col-md-3">
                <p>{{address5}}</p>
              </div>
            </div>
          </div>
          <div class="container">
            <div class="row" style="height:60px;">
              <div class="col-xs-3 col-md-1">
                <i class="fa fa-map-marker"></i>
              </div>
              <div class="col-xs-7 col-md-3">
                <p>{{address6}}</p>
              </div>
            </div>
          </div>
          <div class="container">
            <div class="row">
              <div class="col-xs-3 col-md-1">
                <i class="fa fa-envelope"></i>
              </div>
              <div class="col-xs-7 col-md-3">
                <p>{{webmail}}</p>
              </div>
            </div>
          </div>
          <div class="container">
            <div class="row">
              <div class="col-xs-3 col-md-1">
                <i class="fa fa-phone"></i>
              </div>
              <div class="col-xs-7 col-md-3">
                <p>{{businessPhone}}</p>
              </div>
            </div>
          </div>
        </div>

        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">

          <div class="form">
            <div id="sendmessage">Your message has been sent. Thank you!</div>
            <div id="errormessage"></div>
            <form action="send" method="POST" class="contactForm">
              <div class="form-group">
                <input type="text" name="name" class="form-control" id="name" placeholder="Your Name"
                  data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                <div class="validation"></div>
              </div>
              <div class="form-group">
                <input type="email" class="form-control" name="email" id="email" placeholder="Your Email"
                  data-rule="email" data-msg="Please enter a valid email" />
                <div class="validation"></div>
              </div>
              <!-- CUSTOM TELPH RICARD-->
              <div class="form-group">
                <input type="phone" class="form-control" name="phone" id="phone" placeholder="Your Phone number"
                  data-rule="phone" data-rule="minlen:10" data-msg="Please enter a valid phone number" />
                <div class="validation"></div>
              </div>

              <div class="form-group">
                <select id="treatment" name="treatment">
                  <option value="Choose a treatment">Choose a treatment</option>
                  <option value="First visit and assessm.">{{treatment1}}</option>
                  <option value="Repeat visit">{{treatment2}}</option>
                  <option value="Pronto">{{treatment3}}</option>
                  <option value="Medi peri">{{treatment4}}</option>
                  <option value="Ultimate Medi Pedi">{{treatment5}}</option>
                  <option value="Manly Pedi">{{treatment6}}</option>
                  <option value="Diabetic Foot Assessment">{{treatment7}}</option>
                  <option value="Nail Surgery">{{treatment8}}</option>
                  <option value="Verruca Treatment">{{treatment9}}</option>
                  <option value="Biomechanical Assessment">{{treatment10}}</option>
                  <option value="Wound care">{{treatment11}}</option>
                  <option value="Others">Others</option>
                </select>
              </div>



              <div class="form-group">
                <select id="clinic" name="clinic">
                  <option value="Choose a clinic">Choose a clinic</option>
                  <option value="Marlborough clinic">Marlborough clinic</option>
                  <option value="Bristol clinic">Bristol clinic</option>
                  <option value="Swindon clinic">Swindon clinic</option>
                  <option value="Newbury clinic">Newbury clinic</option>
                  <option value="Salisbury clinic">Salisbury clinic</option>
                  <option value="Old Town clinic">Old Town clinic</option>
                </select>
              </div>
              <div class="form-group">
                <input type="text" class="form-control" name="subject" id="subject" placeholder="Subject"
                  data-rule="minlen:4" data-msg="Please enter at least 4 chars of subject" />
                <div class="validation"></div>
              </div>
              <div class="form-group">
                <textarea class="form-control" name="message" rows="5" data-rule="required"
                  data-msg="Please write something for us" placeholder="Message"></textarea>
                <div class="validation"></div>
              </div>

              <div class="form-group">
                <input type="checkbox" name="gdpr" value="gdpr"> I have read and accept the
                <a href="/privacy">privacy & GDPR policies</a>
                <br>
              </div>

              <div class="g-recaptcha" data-sitekey="6LcdWHYUAAAAAMppTe0oGpG9gtZ6FAmuvCb_CWzd"></div>
              <br>
              <div class="text-center">
                <button type="submit">Send Message</button>
              </div>
            </form>
          </div>


        </div>
      </div>






    </div>

</section>
